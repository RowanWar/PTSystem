@model IEnumerable<PTManagementSystem.Models.WorkoutModel>

<p>
    Client Workout Page
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutCreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkoutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkoutDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkoutCreatedAt)
            </td>
            <td>
                @Html.ActionLink("Workout Details", "WorkoutDetails", new { item.WorkoutId })
                @* <a asp-action="Details" asp-route-id="@item.WorkoutId">View Workout</a> | *@
                @* <a asp-action="Delete" asp-route-id="@item.WorkoutId">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
